doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    title Crear Armadura
    link(rel='stylesheet', href='/css/formularios.css')
    link(rel='stylesheet', href='https://unpkg.com/boxicons@latest/css/boxicons.min.css')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet')
    link(rel='icon', href='/img/favicon/favicon.ico', type='image/x-icon')
  body
    // navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.navbar-background
      .container
        a.navbar-brand(href='/admin/armaduras')
          img(src='/img/back.png', alt='Volver', class='back')
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span
            img.menu(src='/img/menu.png', alt='')
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav
            li.nav-item
              a.nav-link.text-white(href='/admin/armaduras') Armadura
            li.nav-item
              a.nav-link.text-white(href='/admin/armas') Arma
            li.nav-item
              a.nav-link.text-white(href='/admin/items') Ítem
            li.nav-item
              a.nav-link.text-white(href='/admin/epicas') Épica
          a.nav-link(href='#', id='toggle-collapse')
            i.bi.bi-list
    // form-container
    .container.form-container
      h1.mt-5.text-lg-center Formulario de Armadura
      form.card-form(action='/admin/creararmadura', method='post', enctype='multipart/form-data')
        // Fila 1
        .row.mb-3
          .col-md-6
            label.form-label(for='nombre') Nombre:
            input.form-control(type='text', id='nombre', name='nombre', required, value='Armadura pesada')
        // Fila 2
        .row.mb-3
          .col-md-6
            label.form-label(for='descripcion') Descripción:
            input.form-control(type='text', id='descripcion', name='descripcion', required, value='+4 en defensa')
          .col-md-6
            label.form-label(for='poder') Poder:
            input.form-control(type='text', id='poder', name='poder', required)
        // Fila 3
        .row.mb-3
          .col-md-6
            label.form-label(for='tipo') Tipo:
            select.form-select(name='tipo', id='tipo', required)
              option(value='Tanque' selected) Tanque
              option(value='Armas') Armas
              option(value='Fuego') Fuego
              option(value='Hielo') Hielo
              option(value='Veneno') Veneno
              option(value='Machete') Machete
          .col-md-6
            label.form-label(for='clase') Clase:
            select.form-select(id='clase', name='clase', required)
              option(value='Guerrero' selected) Guerrero
              option(value='Mago') Mago
              option(value='Pícaro') Pícaro
        // Fila 4
        .row.mb-3
          .col-md-6
            label.form-label(for='estado') Estado:
            select.form-select(name='estado', id='estado', required)
              option(value='true' selected) Activo
              option(value='false') Inactivo
          .col-md-6
            label.form-label(for='precio') Precio:
            input.form-control(type='number', id='precio', name='precio', required, value='55000')
        // Fila 5
        .row.mb-3
          .col-md-6
            label.form-label(for='defensa') Defensa:
            input.form-control(type='number', id='defensa', name='defensa', required, value='4')
          .col-md-6
            label.form-label(for='stock') Stock:
            input.form-control(type='number', id='stock', name='stock', required, value='0')
        // Fila 6
        .row.mb-3
          .col-md-6
            label.form-label(for='descuento') Descuento:
            input.form-control(type='number', id='descuento', name='descuento', required, value='15')
          .col-md-6
            label.form-label(for='imagen') Imagen:
            input.form-control(type='file', id='imagen', name='imagen', accept='image/*')
        // Fila 7
        .row.mb-3
          .col-md-6
            label.form-label(for='estadistica') Estadística:
            input.form-control(type='text', id='estadistica', name='estadistica', required, value='Defensa')
          .col-md-6
            label.form-label(for='id_estrategia') ID Estrategia:
            input.form-control(type='number', id='id_estrategia', name='id_estrategia', required, value='0')
        // Fila 8
        .row.mb-3
          .col-md-6
            label.form-label(for='turnosValidos') Turnos Válidos:
            input.form-control(type='number', id='turnosValidos', name='turnosValidos', required, value='-1')
          .col-md-6
            label.form-label(for='valorAfectado') Valor Afectado:
            input.form-control(type='number', id='valorAfectado', name='valorAfectado', required, value='4')
        // Botón de envío y cancelar
        .row.mt-3(style="justify-content: center;")
          .col-md-6
            div.d-flex.justify-content-between.align-items-center
              button.btn.btn-secondary(type='button') Cancelar
              button.btn.btn-primary.ml-auto.top-0(type='submit') Enviar formulario
